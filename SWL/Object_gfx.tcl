method Object_gfx constructor {} {
 set this(root) ""
 set this(x)    0
 set this(y)    0
 set this(mode) edition
}

#_________________________________________________________________________________________________________
method Object_gfx dispose {} {
 this inherited
}

#_________________________________________________________________________________________________________
#_________________________________________________________________________________________________________
#_________________________________________________________________________________________________________
Generate_accessors Object_gfx [list root mode]

#_________________________________________________________________________________________________________
#_________________________________________________________________________________________________________
#_________________________________________________________________________________________________________
method Object_gfx get_x { } {return [$this(root) Px]}
method Object_gfx get_y { } {return [$this(root) Py]}
method Object_gfx set_x {v} {set this(x) $v; $this(root) Px $v}
method Object_gfx set_y {v} {set this(y) $v; $this(root) Py $v}
